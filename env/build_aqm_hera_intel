#%Module ######################################################################
##
##    AQM Prerequisites: Hera/Intel

#proc ModulesHelp {} {
#  puts stderr "\tcit - loads modules required for building and running AQM on Hera/Intel"
#}

#module-whatis "loads AQM prerequisites for Hera/Intel"

module purge

### hpc-stack ###
module use /scratch2/NCEPDEV/nwprod/hpc-stack/libs/hpc-stack/modulefiles/stack
module load hpc/1.1.0
module load hpc-intel/18.0.5.274
module load hpc-impi/2018.0.4

module load bacio/2.4.1
module load bufr/11.6.0
module load g2c/1.6.4
module load ip/3.3.3
module load ip2/1.1.2
module load jasper/2.0.25
module load nemsio/2.5.2
module load nemsiogfs/2.5.3
module load prod_util/1.2.2
module load w3emc/2.9.0
module load w3nco/2.4.1

## load ESMF library for above compiler / MPI combination
module unload hdf5
module unload netcdf
module use /scratch1/NCEPDEV/nems/emc.nemspara/soft/modulefiles
module load hdf5_parallel/1.10.6
module load netcdf_parallel/4.7.4
module load esmf/8.0.0_ParallelNetCDF

export NETCDF_LDFLAGS="-L$NETCDF/lib -lnetcdff -lnetcdf"

## load cmake
module load cmake/3.16.1
export CMAKE_C_COMPILER=mpiicc
export CMAKE_CXX_COMPILER=mpiicpc
export CMAKE_Fortran_COMPILER=mpiifort
export CMAKE_Platform=hera.intel
